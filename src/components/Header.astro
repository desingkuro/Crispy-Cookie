---
import { SITE_TITLE } from "../consts";
import HeaderLink from "./HeaderLink.astro";
import userProfile from "../assets/user-profile.svg";
---

<header>
  <nav class="p-2">
    <h2><a href="/">{SITE_TITLE}</a></h2>
    <div>
      <section class="flex items-center gap-2 position-relative">
        <input
          type="text"
          class="p-2 rounded-xl border border-gray-200 focus:outline-none focus:border-gray-400"
          placeholder="Buscar"
        />
        <button class=" position-absolute top-2 right-2 p-2 rounded-xl border text-sm cursor-pointer border-gray-200">Buscar</button>
      </section>
    </div>
    <div class="social-links">
      <a
        href="/"
        class="shadow-sm h-[40px] w-[40px] overflow-hidden flex items-center justify-center rounded-full"
      >
        <img
          src={userProfile.src}
          class="h-full w-full rounded-full object-cover min-h-[40px] min-w-[40px]"
          alt="User Profile"
        />
      </a>
    </div>
  </nav>
</header>
<style>
  header {
    margin: 0;
    padding: 0 1em;
    background: white;
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
    position: static;
  }
  h2 {
    margin: 0;
    font-size: 1em;
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  nav a {
    padding: 1em 0.5em;
    color: var(--black);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  nav a.active {
    text-decoration: none;
    border-bottom-color: var(--accent);
  }
  .social-links,
  .social-links a {
    display: flex;
  }
  @media (max-width: 720px) {
    .social-links {
      display: none;
    }
  }
</style>
