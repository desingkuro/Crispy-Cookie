---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>Mis Compartidos</title>
  </head>
  <body>
    <main class="compartidos-container">
      <h1>Mis Recetas Compartidas</h1>
      <section class="grid-compartidos">
        {compartidos.map(item => (
          <article class="card">
            <img src={item.imagen} alt={item.titulo} class="card-img" />
            <div class="card-body">
              <h2>{item.titulo}</h2>
              <p>{item.descripcion}</p>
              <small>üìÖ {item.fecha}</small>
              <div class="stats">
                <span>üëÄ {item.vistas}</span>
                <span>‚ù§Ô∏è {item.likes}</span>
              </div>
              <div class="acciones">
                <a href={`/receta/${item.id}`} class="btn">Ver receta</a>
