    <body>
        <main class="perfil-usuario">
    <body>
        
    </body>
    <section class="perfil-header">
        <img src={user.imagen} alt="Imagen de usuario" class="perfil-imagen" />
        <div class="perfil-info">
            <h2>{user.nombre} {user.apellido}</h2>
            <p><strong>Usuario:</strong> @{user.usuario}</p>
            <p class="perfil-bio">{user.bio}</p>
            <div class="perfil-redes">
                <a href={user.redes.instagram} target="_blank" title="Instagram" class="icono-red"><img src="https://simpleicons.org/icons/instagram.svg" alt="Instagram" width="24" height="24" /></a>
                <a href={user.redes.tiktok} target="_blank" title="TikTok" class="icono-red"><img src="https://simpleicons.org/icons/tiktok.svg" alt="TikTok" width="24" height="24" /></a>
                <a href={user.redes.twitter} target="_blank" title="Twitter" class="icono-red"><img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/twitter/twitter-original.svg" alt="Twitter" width="24" height="24" /></a>
                <a href={`mailto:${user.email}`} title="Correo" class="icono-red"><img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/google/google-original.svg" alt="Correo" width="24" height="24" /></a>
            </div>
            <p class="perfil-fecha">Miembro desde: {user.fechaRegistro}</p>
            <button class="btn-editar">Editar perfil</button>
        </div>
    </section>
    <section class="perfil-intereses">
        <h3>Mis intereses</h3>
        <ul>
            {user.intereses.map(interes => (
                <li>{interes}</li>
            ))}
        </ul>
    </section>
    <section class="perfil-actividad">
        <h3>Actividad reciente</h3>
        <ul>
            {user.actividadReciente.map(item => (
                <li>
                    {item.tipo === "receta" ? "üìù" : "üí¨"} <a href={item.link}>{item.titulo}</a>
                </li>
            ))}
        </ul>
    </section>
    <section class="perfil-badges">
        <h3>Logros</h3>
        <div class="badges-list">
            {user.badges.map(badge => (
                <span class="badge">{badge.nombre} {badge.nombre}</span>
            ))}
        </div>
    </section>
</main>
    </body>
</html>

