<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <title>Iniciar Sesión</title>
        <style>
            .login-container {
                max-width: 400px;
                margin: 3rem auto;
                padding: 2rem;
                border-radius: 8px;
                box-shadow: 0 2px 8px rgba(0,0,0,0.1);
                background: #fff;
                font-family: sans-serif;
            }
            .login-container h2 {
                text-align: center;
                margin-bottom: 1.5rem;
            }
            .login-container label {
                display: block;
                margin-bottom: 0.5rem;
                font-weight: 600;
            }
            .login-container input {
                width: 100%;
                padding: 0.5rem;
                margin-bottom: 1rem;
                border: 1px solid #ccc;
                border-radius: 4px;
            }
            .login-container button {
                width: 100%;
                padding: 0.7rem;
                background: #0070f3;
                color: #fff;
                border: none;
                border-radius: 4px;
                font-size: 1rem;
                cursor: pointer;
                margin-bottom: 1rem;
            }
            .login-container .social-btns button {
                width: 100%;
                margin-bottom: 0.5rem;
                background: #f5f5f5;
                color: #333;
                border: 1px solid #ccc;
                display: flex;
                align-items: center;
                justify-content: center;
                gap: 0.5rem;
            }
            .login-container .forgot {
                text-align: right;
                margin-bottom: 1rem;
            }
            .login-container .forgot a {
                color: #0070f3;
                text-decoration: none;
                font-size: 0.95rem;
            }
        </style>
    </head>
    <body>
        <div class="login-container">
            <h2>Iniciar Sesión</h2>
            <form>
                <label for="email">Correo electrónico</label>
                <input
                    id="email"
                    type="email"
                    name="email"
                    placeholder="correo@ejemplo.com"
                    required
                />

                <label for="password">Contraseña</label>
                <input
                    id="password"
                    type="password"
                    name="password"
                    placeholder="Contraseña"
                    required
                />

                <div class="forgot">
                    <a href="/recuperar">¿Olvidaste tu contraseña?</a>
                </div>

                <button type="submit">Iniciar Sesión</button>
            </form>

            <div style="text-align:center; margin: 1rem 0;">o</div>

            <div class="social-btns">
                <button type="button" style="background:#fff; border:1px solid #ccc;">
                    <img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/google/google-original.svg" alt="Google" width="20" height="20" />
                    Iniciar sesión con Google
                </button>
